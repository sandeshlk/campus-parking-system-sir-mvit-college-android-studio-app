<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/area1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main Entrance Parking Lot"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/avail1"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_below="@id/area1"
            android:text="View Availability"
            android:layout_marginTop="5dp"
            android:onClick="CheckAvail"/>

        <EditText
            android:id="@+id/editText1"
            android:background="#C0C0C0"
            android:layout_width="72dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="66dp"
            android:layout_marginEnd="27dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="center"
            android:layout_marginTop="261dp"
            android:textSize="20dp"
            android:layout_marginEnd="32dp"
            android:background="#C0C0C0"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/editText4"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"

            android:layout_marginTop="567dp"
            android:layout_marginEnd="64dp"
            android:background="#C0C0C0"
            android:textAlignment="center"
            android:textSize="20dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/editText6"
            android:textSize="20dp"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:background="#C0C0C0"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="872dp"
            android:layout_marginEnd="39dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>

        <TextView
            android:id="@+id/editText5"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="20dp"
            android:background="#C0C0C0"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="709dp"
            android:layout_marginEnd="39dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/editText3"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:background="#C0C0C0"
            android:layout_alignParentEnd="true"
            android:textSize="20dp"
            android:layout_marginTop="391dp"
            android:layout_marginEnd="36dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/dir1"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_below="@id/avail1"
            android:text="Direction"
            android:layout_marginTop="5dp"/>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/dir1"
            android:layout_marginTop="10dp"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/area2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view1"
            android:text="Side Entrance Parking Lot"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <Button
            android:onClick="CheckAvail"
            android:id="@+id/avail2"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_below="@id/area2"
            android:text="View Availability"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/dir2"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_below="@id/avail2"
            android:text="Direction"
            android:layout_marginTop="5dp"/>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/dir2"
            android:layout_marginTop="10dp"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/area3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view2"
            android:text="Canteen Parking Lot"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/avail3"
            android:onClick="CheckAvail"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_below="@id/area3"
            android:text="View Availability"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/dir3"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_below="@id/avail3"
            android:text="Direction"
            android:layout_marginTop="5dp"/>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/dir3"
            android:layout_marginTop="10dp"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/area4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view3"
            android:text="Mechanical/Civil Parking Lot"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/avail4"
            android:onClick="CheckAvail"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_below="@id/area4"
            android:text="View Availability"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/dir4"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_below="@id/avail4"
            android:text="Direction"
            android:layout_marginTop="5dp"/>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/dir4"
            android:layout_marginTop="10dp"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/area5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view4"
            android:text="Dental College Parking Lot"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/avail5"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_below="@id/area5"
            android:layout_marginTop="5dp"
            android:onClick="CheckAvail"
            android:text="View Availability" />

        <Button
            android:id="@+id/dir5"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_below="@id/avail5"
            android:text="Direction"
            android:layout_marginTop="5dp"/>

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/dir5"
            android:layout_marginTop="10dp"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/area6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view5"
            android:text="Boys Hostel Parking Lot"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/avail6"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_below="@id/area6"
            android:layout_marginTop="8dp"
            android:onClick="CheckAvail"
            android:text="View Availability" />

        <Button
            android:id="@+id/dir6"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_below="@id/avail6"
            android:text="Direction"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>
</ScrollView>
